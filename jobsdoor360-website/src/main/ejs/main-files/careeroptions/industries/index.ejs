          width: 100%;
          box-sizing: border-box;
          margin: 0 auto;
          padding: 16px;
          background: #f7f9fb;
        }

        .all-industries .header {
          max-width: 1200px;
          margin: 0 auto 18px auto;
          display: flex;
          align-items: center;
          gap: 12px;
        }

        .all-industries h2 {
          margin: 0;
          font-size: 20px;
          color: #0f2747;
        }

        .industry-list {
          max-width: 1200px;
          margin: 0 auto;
          display: grid;
          grid-template-columns: 1fr;
          gap: 14px;
        }

        .industry-card {
          display: grid;
          grid-template-columns: 32% 1fr;
          gap: 18px;
          background: #ffffff;
          border-radius: 10px;
          padding: 18px;
          box-shadow: 0 2px 6px rgba(15, 39, 71, 0.06);
          align-items: start;
          border: 1px solid #e6eef8;
        }

        .industry-left {
          background: #f1f6fb;
          padding: 12px 14px;
          border-radius: 8px;
          font-weight: 700;
          color: #05386b;
          display: flex;
          align-items: center;
          min-height: 72px;
        }

        .industry-left .title {
          font-size: 15px;
          line-height: 1.2;
        }

        .industry-right {
          padding: 4px 2px;
        }

        .industry-right ul {
          margin: 0;
          padding-left: 18px;
          color: #243447;
        }

        .industry-right ul li {
          margin-bottom: 6px;
          font-size: 14px;
          line-height: 1.35;
        }

        /* responsive: stack on small screens */
        @media (max-width: 880px) {
          .industry-card {
            grid-template-columns: 1fr;
          }
          .industry-left {
            min-height: auto;
            padding: 10px 12px;
            border-bottom-left-radius: 0;
            border-bottom-right-radius: 0;
          }
        }

        /* smaller phones - slightly larger text for left */
        @media (max-width: 420px) {
          .industry-left .title { font-size: 16px; }
          .industry-right ul li { font-size: 15px; }
          .all-industries { padding: 12px; }
        }
      </style>

